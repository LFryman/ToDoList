
@{
    ViewData["Title"] = "AddTask";
}

<h1>AddTask</h1>


<form action="../User/AddTask" method="post">
    <input type="date" name="DueDate" placeholder="Due Date" class="form-control mb-4" />
    <input type="text" name="TaskDescription" placeholder="Task Description" class="form-control mb-4" /> 
    <div class="form-control mb-4">
        Complete? <input type="checkbox" name="Complete" value="true" />
        <input type="checkbox" name="Complete" value="false" hidden />
    </div>
    <input type="submit" value="Save Changes" class="form-control mb-4" />
</form>